@model GeloraGorApp.Models.JenisLapangan

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h2>Edit</h2>

            <h4 class="text-primary">Jenis Lapangan</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="NamaJenis" class="control-label"></label>
                    <input asp-for="NamaJenis" class="form-control" />
                    <span asp-validation-for="NamaJenis" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input class="btn btn-primary" type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
