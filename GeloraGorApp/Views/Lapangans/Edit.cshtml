@model GeloraGorApp.Models.Lapangan

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h2>Edit</h2>
            <h4 class="text-primary">Lapangan</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="JenisId" class="control-label"></label>
                    <select asp-for="JenisId" class="form-control" asp-items="ViewBag.JenisId"></select>
                    <span asp-validation-for="JenisId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NamaLapangan" class="control-label"></label>
                    <input asp-for="NamaLapangan" class="form-control" />
                    <span asp-validation-for="NamaLapangan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Catatan" class="control-label"></label>
                    <input asp-for="Catatan" class="form-control" />
                    <span asp-validation-for="Catatan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Harga" class="control-label"></label>
                    <input asp-for="Harga" class="form-control" />
                    <span asp-validation-for="Harga" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input asp-for="Foto" class="form-control" />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
